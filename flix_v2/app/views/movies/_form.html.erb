<%= form_for @movie do |f| %>
	<%= f.label(:title) %> <br>
	<%= f.text_field(:title, autofocus: true) %> <br>
	<%= f.label(:description) %> <br>
	<%= f.text_area(:description, cols: 40, rows: 7) %> <br>
	<%= f.label(:rating) %> <br>
	<%= f.text_field(:rating, size: 5) %> <br>
	<%= f.label(:released_on) %> <br>
	<%= f.date_field(:released_on) %> <br>
	<%= f.label(:total_gross) %> <br>
	<%= f.number_field(:total_gross) %> <br>
	<%= f.label(:cast) %> <br>
	<%= f.text_field(:cast) %> <br>
	<%= f.label(:director) %> <br>
	<%= f.text_field(:director) %> <br>
	<%= f.label(:duration) %> <br>
	<%= f.text_field(:duration) %> <br>
	<%= f.label(:image_file_name) %> <br>
	<%= f.text_field(:image_file_name) %> <br>
	<%= f.submit %> | <%= link_to("Cancel", movies_path) %>
<% end %>